{
  "name": "lotup-blockchain",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "compile": "TS_NODE_PROJECT=.ts-node.json hardhat compile",
    "test": "TS_NODE_PROJECT=.ts-node.json hardhat test",
    "deploy:localhost": "TS_NODE_PROJECT=.ts-node.json hardhat run scripts/deploy.ts --network localhost",
    "deploy:sepolia": "TS_NODE_PROJECT=.ts-node.json hardhat run scripts/deploy.ts --network sepolia",
    "node": "TS_NODE_PROJECT=.ts-node.json hardhat node"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ethers": "^6.13.0",
    "wagmi": "^2.12.0",
    "@rainbow-me/rainbowkit": "^2.0.0",
    "@tanstack/react-query": "^5.59.0"
  },
  "devDependencies": {
    "typescript": "^5.7.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^10.0.0",
    "ts-node": "^10.9.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "^15.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "hardhat": "^2.22.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.4.0"
  },
  "ts-node": {
    "esm": false,
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true
    }
  }
}
